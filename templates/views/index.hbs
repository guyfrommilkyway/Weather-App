<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>

    <!-- css files -->
    {{>css}}
</head>

<body>
    {{>header}}

    <div class="container">
        <div class="row mt-2 mr-3 ml-3">
            <div class="col-md-4">
                <div class="">
                    <span>Use this site to get your weather!</span>
                    <form class="mt-2" action="">
                        <div class="form-group">
                            <input class="form-control-sm" type="text" placeholder="Enter your location">
                            <button class="btn btn-sm btn-dark">Search</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <div class="mt-3 bg-light p-3 rounded" id="result" style="display: none;">
                    <h4 id="messageOne"></h4>
                    <p id="messageTwo"></p>
                </div>
                <div class="mt-3 bg-light p-3 rounded" id="errorMessage" style="display: none;">
                    <span id="errorMessage"></span>
                </div>
            </div>
        </div>
    </div>

    {{>footer}}

    <!-- javascript files -->
    {{>script}}
</body>

</html>